<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_presupuesto_from" model="ir.ui.view">
        <field name="name">Vista Formulario De Presupuesto De Peliculas</field>
        <field name="model">presupuesto</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Aprobar" type="object" name="aprobar_presupuesto" class="oe_highlight" states="borrador"/>
                    <button string="Cancelar" type="object" name="cancelar_presupuesto" states="borrador,aprobado"/>
                    <button string="Popup" type="action" name="%(action_open_update_wizard)d" states="aprobado" groups="peliculas.group_pelicula_administrador"/>
                     <field name="state" widget="statusbar" statusbar_visible="borrador,aprobado"/>
                </header>
                <div class="alert alert-info" role="alert" style="margin-bottom: 0px" attrs="{'invisible': [('dsc_clasificacion','=',False)]}">
                    <field name="dsc_clasificacion" readonly="1" force_save="1"/>
                </div>
<!--                <div class="alert alert-success" role="alert" style="margin-bottom: 0px" attrs="{'invisible': [('dsc_clasificacion','=',False)]}">-->
<!--                    <field name="dsc_clasificacion" readonly="1" force_save="1"/>-->
<!--                </div>-->
<!--                <div class="alert alert-warning" role="alert" style="margin-bottom: 0px" attrs="{'invisible': [('dsc_clasificacion','=',False)]}">-->
<!--                    <field name="dsc_clasificacion" readonly="1" force_save="1"/>-->
<!--                </div>-->
<!--                <div class="alert alert-danger" role="alert" style="margin-bottom: 0px" attrs="{'invisible': [('dsc_clasificacion','=',False)]}">-->
<!--                    <field name="dsc_clasificacion" readonly="1" force_save="1"/>-->
<!--                </div>-->
                <sheet>
<!--                    <center>-->
<!--                        <h1 style="color: red">-->
<!--                            Titulo!!-->
<!--                        </h1>-->
<!--                    </center>-->
                    <widget name="web_ribbon" title="Archivado" bg_color="bg-danger" attrs="{'invisible': [('active','=',True)]}"/>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128', 'size': ['',128]}"/>
                    <div class="oe_title">
                        <div class="o_row">
                            <field name="active" invisible="1"/>
                            <h1 style="display: flex;">
                                <field name="name" placeholder="Nombre de la pelicula" required="1" default_focus="1" class="oe_inline"/>
                                <field name="puntuacion" widget="percentpie" string=" " style="padding-left: 10px;" class="oe_inline"/>
                                <field name="puntuacion2" class="oe_edit_only oe_inline"/>
                            </h1>

                        </div>
                    </div>
                    <div>
                        <div class="o_row" style="display: flex;">
                            <field name="clasificacion" required="1"/>
                            <span class="fa fa-circle" attrs="{'invisible': [('clasificacion','=', False),('fecha_estreno','=',False)]}" style="font-size: 8px; padding: 5px;"/>
                            <field name="fecha_estreno" />
                        </div>
                    </div>

                    <div class="o_row" >
                            <field name="genero_ids" widget="many2many_tags" style="display: flex;"/>
                        </div>
                    <group string="Datos Principales" style="margin-top: -10px;">
                        <field name="vista_general" placeholder="Vista General..." attrs="{'readonly': [('state','!=','borrador')]}"/>
                        <group>
                            <field name="director_id" domain="[('category_id', 'in', [categoria_director_id])]"  options="{'no_create': True, 'no_open': True,}"/>
                            <field name="categoria_director_id"  invisible="0" />
                            <field name="link_trailer" widget="url" />
<!--                            <field name="fec_aprobado" readonly="1" />-->
<!--                            <field name="num_presupuesto"  readonly="1"/>-->


                        </group>
                        <group>
                            <field name="es_libro"  widget="boolean_toggle"/>
                            <field name="libro" filename="libro_filename" attrs="{'invisible': [('es_libro','=', False)]}" />
                            <field name="libro_filename" invisible="1"/>

                        </group>

                    </group>
                    <separator string="Detalles"/>
                    <notebook>
                        <page string="Presupuesto">
                            <group>
                                <field name="num_presupuesto" readonly="1" />
                                <field name="fec_aprobado" readonly="1" />
                                <field name="fec_creacion" readonly="1" />

                            </group>
                            <group>
                                <field name="currency_id"/>
                                <field name="campos_ocultos" widget="boolean_toggle" groups="peliculas.group_pelicula_administrador"/>
                            </group>
                            <field name="detalle_ids">
                                <tree editable="bottom">
                                    <control>
                                        <create name="add_product_control" string="Agregar recurso cinematografico"/>
                                    </control>
                                    <field name="imagen" widget="image" options="{'size':[80, 50]}" optional="Show"/>
                                    <field name="name"/>
                                    <field name="descripcion" optional="Show"/>
                                    <field name="contacto_id" attrs="{'column_invisible':[('parent.campos_ocultos','=',False)]}"/>
                                    <field name="cantidad"/>
                                    <field name="precio"/>
                                    <field name="importe" readonly="1" force_save="1" />
                                    <field name="currency_id" invisible="1"/>


                                </tree>
                            </field>
                            <group col="6" class="mt-2 mt-md-0">
                                <group colspan="4">
                                    <field name="terminos" nolabel="1" placeholder="TÃ©rminos y condiciones..."/>

                                </group>
                                <group class = "oe_subtotal_footer oe_right" colspan="2">
                                    <field name="base" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="impuestos"/>
                                    <div class="oe_subtotal_footer_separator oe_line o_td_label">
                                        <label for="total">Total</label>
                                    </div>
                                    <field name="total" nolabel="1"  class="oe_subtotal_footer_separator" widget="monetary"
                                    options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <div class="oe_clear"/>
                            </group>

                        </page>
                        <page string="Otra informacion">
                            <group>
<!--                                <field name="actor_ids" domain="[('category_id', 'in', [categoria_actor_id])]"  options="{'no_create': True, 'no_open': True,}" widget="many2many_tags"/>-->
                                <field name="actor_ids" mode="kanban" domain="[('category_id', 'in', [categoria_actor_id])]"  options="{'no_create': True, 'no_open': True,}"/>
                                <field name="categoria_actor_id"  invisible="1" />
                                <field name="opinion" />



                            </group>


                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>



            </form>
        </field>
    </record>


    <record id="view_presupuesto_tree" model="ir.ui.view">
        <field name="name">Vista Lista de presupuesto</field>
        <field name="model">presupuesto</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state=='cancelado' " decoration-success="state == 'aprobado' " decoration-warning="state == 'borrador' ">
                <field name="name" />
                <field name="num_presupuesto" />
                <field name="fec_creacion"/>
                <field name="total" sum="importe_total"/>
                <field name="state" widget="badge" decoration-success="state == 'aprobado' "  decoration-danger="state=='cancelado' " />

            </tree>

            <!--            decoration-bf: negrita-->
            <!--            decoration-it: cursiva-->
            <!--            decoration-danger:color rojo-->
            <!--            decoration-info:color azul claro-->
            <!--            decoration-muted:color gris claro-->
            <!--            decoration-success: color verde-->
            <!--            decoration-warning:color mostaza-->




        </field>



    </record>
    <record id="view_presupuesto_kanban" model="ir.ui.view">
     <field name="name">Vista kanban de presupuesto</field>
        <field name="model">presupuesto</field>
        <field name="arch" type="xml">
                <kanban>
                    <field name="id" />
                    <field name="currency_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="o_kanban_global_clic">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('presupuesto','image_128', record.id.raw_value)" class="o_image_64_contain"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="oe_kanban_record_title">
                                         <field name="name" />
                                    </strong>
                                     <field name="clasificacion" />
                                      <div>
                                        <field name="genero_ids" />
                                    </div>
                                    <div>
                                        <field name="total"  widget="monetary" options="{'currency_field': 'currency_id', 'field:digits': True}"/>
                                    </div>

                                </div>
                            </div>
                        </t>

                    </templates>

                </kanban>
        </field>
    </record>

</odoo>