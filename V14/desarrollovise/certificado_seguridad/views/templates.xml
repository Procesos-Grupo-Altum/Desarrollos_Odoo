<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Estilos CSS personalizados -->
    <template id="assets_backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <style>
                /* Badges para estado de vigencia */
                .bg-success {
                    background-color: #28a745 !important;
                    color: white !important;
                }

                .bg-warning {
                    background-color: #ffc107 !important;
                    color: #212529 !important;
                }

                .bg-danger {
                    background-color: #dc3545 !important;
                    color: white !important;
                }

                /* Estilos para kanban */
                .oe_kanban_text_vigente {
                    color: #28a745;
                    font-weight: bold;
                }

                .oe_kanban_text_por_vencer {
                    color: #ffc107;
                    font-weight: bold;
                }

                .oe_kanban_text_vencido {
                    color: #dc3545;
                    font-weight: bold;
                }

                /* Estilo para campos de fecha urgente */
                .text-danger {
                    color: #dc3545 !important;
                    font-weight: bold;
                }

                /* Estilo para el campo de archivo PDF */
                .o_field_binary_file {
                    padding: 15px;
                    border: 2px dashed #dee2e6;
                    border-radius: 5px;
                    text-align: center;
                    background-color: #f8f9fa;
                }

                .o_field_binary_file:hover {
                    border-color: #007bff;
                    background-color: #e9f7fe;
                }

                /* Alertas personalizadas */
                .alert {
                    padding: 0.75rem 1.25rem;
                    margin-bottom: 1rem;
                    border: 1px solid transparent;
                    border-radius: 0.25rem;
                }

                .alert-info {
                    color: #0c5460;
                    background-color: #d1ecf1;
                    border-color: #bee5eb;
                }

                .alert-warning {
                    color: #856404;
                    background-color: #fff3cd;
                    border-color: #ffeeba;
                }

                .alert-danger {
                    color: #721c24;
                    background-color: #f8d7da;
                    border-color: #f5c6cb;
                }

                /* Mejoras en formulario */
                .oe_kanban_details ul {
                    padding-left: 0;
                    list-style: none;
                    margin-bottom: 0;
                }

                .oe_kanban_details li {
                    margin-bottom: 5px;
                }

                .oe_kanban_details strong {
                    margin-right: 5px;
                }

                /* Estilo para texto extra√≠do */
                textarea.o_field_text {
                    font-family: 'Courier New', monospace;
                    font-size: 12px;
                    line-height: 1.4;
                }
            </style>
        </xpath>
    </template>
</odoo>