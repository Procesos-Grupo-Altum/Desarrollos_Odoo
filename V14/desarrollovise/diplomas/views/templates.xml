<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Estilos CSS personalizados -->
    <template id="assets_backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <style>
                .estado-borrador {
                    color: #6c757d;
                }
                .estado-procesando {
                    color: #ffc107;
                }
                .estado-completado {
                    color: #28a745;
                }
                .estado-error {
                    color: #dc3545;
                }

                /* Estilo para el campo de archivo */
                .o_field_binary_file {
                    padding: 15px;
                    border: 2px dashed #dee2e6;
                    border-radius: 5px;
                    text-align: center;
                }

                .o_field_binary_file:hover {
                    border-color: #007bff;
                }
            </style>
        </xpath>
    </template>
</odoo>